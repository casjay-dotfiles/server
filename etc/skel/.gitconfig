# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[core]
    abbrev = 12
    attributesfile = ~/.gitattributes
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore
    compression = 9
    packedGitLimit = 512m
    packedGitWindowSize = 512m

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[color "branch"]
    current = green bold
    local = green
    remote = yellow

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[color "diff"]
    frag = magenta
    meta = yellow
    new = green
    old = red
    newMoved = cyan
    oldMoved = blue

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[color "status"]
    added = green reverse
    changed = yellow reverse
    untracked = red reverse

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[diff]
    colorMoved = zebra

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[diff "bin"]
    textconv = hexdump -v -C

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[pack]
    deltaCacheSize = 2047m
    packSizeLimit = 2047m
    windowMemory = 2047m

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[pretty]
    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[push]
    followTags = true

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[user]
    useConfigOnly = true

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[http]
   sslVerify = false

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[include]
    path = ~/.config/git/alias
     path = ~/.config/git/funtions
    path = ~/.local/.configs/gitconfig.local

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

